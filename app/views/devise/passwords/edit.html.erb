<div class="island">
    <div class="island-hd">
        <h2 class="hdg hdg_1">
            Change your password
        </h2>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, autocomplete: 'off' }) do |f| %>
        <div class="island-bd">
            <%= f.error_notification %>

            <%= f.input :reset_password_token, as: :hidden %>
            <%= f.full_error :reset_password_token %>

            <div class="vr_2">
                <div class="form-group mix-form-group_full">
                    <%= f.label :password, label: "New password", class: "u-isVisuallyHidden" %>
                    <%= f.input_field :password, required: true, placeholder: "New password", autofocus: true, class: "input-text" %>
                </div>
                <div class="form-group mix-form-group_full">
                    <%= f.error :password, id: "password_error" %>
                </div>
                <div class="form-group mix-form-group_full">
                    <div class="input-label mix-input_block mix-label_subdued">
                        <%= f.hint ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                    </div>
                </div>

                <div class="form-group mix-form-group_full">
                    <%= f.label :password_confirmation, label: "Confirm your new password", class: "u-isVisuallyHidden" %>
                    <%= f.input_field :password_confirmation, placeholder: "Confirm your new password", required: true, class: "input-text" %>
                </div>
                <div class="form-group mix-form-group_full">
                    <%= f.error :password_confirmation, id: "password_confirmation_error" %>
                </div>
            </div>

            <div class="form-group">
                <%= f.button :submit, "Change my password", class: "btn-submit mix-btn_inverse mix-btn_full" %>
            </div>

        </div>
    <% end %>

    <div class="island-ft">
        <ul class="hlist hlist-divided mix-hlist_spacious mix-hlist_centered">
            <li>
                <%= link_to "Log in", new_session_path(resource_name), class: "link" %>
            </li>
            <li>
                <%= link_to "Sign up", new_registration_path(resource_name), class: "link" %>
            </li>
        </ul>
    </div>
</div>
