<div class="island">
    <div class="island-hd">
        <h2 class="hdg hdg_1">
            Forgot your password?
        </h2>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, autocomplete: 'off' }) do |f| %>
        <div class="island-bd">
            <%= f.error_notification %>

            <div class="vr_2">
                <div class="form-group mix-form-group_full">
                    <%= f.label :email, class: "u-isVisuallyHidden" %>
                    <%= f.input_field :email, required: true, autofocus: true, placeholder: "Email Address", class: "input-text" %>
                </div>
                <div class="form-group mix-form-group_full">
                    <%= f.error :email, id: "email_error" %>
                </div>
            </div>

            <div class="form-group">
                <%= f.button :submit, "Send me reset password instructions", class: "btn-submit mix-btn_inverse mix-btn_full" %>
            </div>
        </div>
    <% end %>

    <div class="island-ft">
        <ul class="hlist hlist-divided mix-hlist_spacious mix-hlist_centered">
            <li>
                <%= link_to "Sign up", new_registration_path(resource_name), class: "link" %>
            </li>
            <li>
                <%= link_to "Log in", new_session_path(resource_name), class: "link" %>
            </li>
        </ul>
    </div>
</div>


