<div class="island">
    <div class="island-hd">
        <h1 class="hdg hdg_1">
            Create Account
        </h1>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { autocomplete: "off", method: :put }) do |f| %>
        <%= f.input :invitation_token, as: :hidden %>

        <div class="island-bd">
            <%= f.error_notification %>

            <div class="vr_3">
                <div class="form-group mix-form-group_full">
                    <%= f.label :username, class: "u-isVisuallyHidden" %>
                    <%= f.input_field :username, required: true, autofocus: true, placeholder: "Username", class: "input-text" %>
                </div>
                <div class="form-group mix-form-group_full">
                    <%= f.error :username, id: "username_error" %>
                </div>

                <div class="form-group mix-form-group_full">
                    <%= f.label :email, class: "u-isVisuallyHidden" %>
                    <%= f.input_field :email, required: true, placeholder: "Email Address", class: "input-text" %>
                </div>
                <div class="form-group mix-form-group_full">
                    <%= f.error :email, id: "email_error" %>
                </div>

                <div class="form-group mix-form-group_full">
                    <%= f.label :password, class: "u-isVisuallyHidden" %>
                    <%= f.input_field :password, required: true, placeholder: "password", class: "input-text" %>
                </div>
                <div class="form-group mix-form-group_full">
                    <%= f.error :password, id: "password_error" %>
                </div>

                <div class="form-group mix-form-group_full">
                    <%= f.label :password_confirmation, class: "u-isVisuallyHidden" %>
                    <%= f.input_field :password_confirmation, required: true, placeholder: "password confirmation", class: "input-text" %>
                </div>
                <div class="form-group mix-form-group_full">
                    <%= f.error :password_confirmation, id: "password_confirmation_error" %>
                </div>

                <div class="form-group mix-form-group_full">
                    <div class="input-label mix-input_block mix-label_subdued">
                        <%= f.hint ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                    </div>
                </div>
            </div>

            <div class="form-group mix-form-group_full">
                <%= f.button :submit, "Create Account", class: "btn-submit mix-btn_inverse mix-btn_full" %>
            </div>
        </div>

        <div class="island-ft">
            <span class="txt-light txt-sansSerif">
                Already have an account?
            </span>
            <%= link_to "Log in", new_session_path(resource_name), class: "link" %>
        </div>
    <% end %>
</div>

