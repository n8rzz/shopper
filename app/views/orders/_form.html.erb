<%= simple_form_for(@order) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="vr_1">
        <div class="form-group">
            <%= f.input :status, collection: ['pending', 'active', 'cancelled', 'complete'], include_blank: false %>
        </div>
        <div class="form-group">
            <%= f.association :location, include_blank: false %>
        </div>
        <div class="form-group">
            <%= f.input :shopping_date, as: :date, html5: true, :input_html => { :class => 'input-date' } %>
        </div>
    </div>

    <div class="form-actions">
        <%= f.button :submit, :class => 'btn btn-submit mix-btn_inverse' %>
    </div>
<% end %>
