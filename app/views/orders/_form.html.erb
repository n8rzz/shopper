<%= simple_form_for(@order) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :status, collection: ['pending', 'active', 'cancelled', 'complete'] %>
  </div>
  <div class="form-inputs">
    <%= f.association :location %>
  </div>
  <div class="form-inputs">
    <%= f.association :order_items, as: :check_boxes, collection: Assembly.all %>
  </div>
  <div class="form-inputs">
    <%= f.association :order_items, as: :check_boxes, collection: Item.all %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
