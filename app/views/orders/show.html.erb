<div class="vr_1">
    <ul class="stereo">
        <li>
            <h1 class="hdg hdg_1">Single Order</h1>
        </li>
        <li>
            <ul class="hlist">
                <li>
                    <%= link_to 'Back', orders_path %> |
                </li>
                <li>
                    <%= link_to 'Edit', edit_order_path(@order) %> |
                </li>
                <li>
                    <%= link_to 'Destroy', @order, method: :delete, data: { confirm: 'Are you sure?' } %>
                </li>
            </ul>
        </li>
    </ul>
</div>
<div class="vr_3">
    <div class="orderMeta">
        <div>
            Created At: <%= @order.created_at %>
        </div>
        <div>
            Status: <%= @order.status %>
        </div>
        <% if @order.location %>
            <div>
                Location: <%= @order.location.name %>
            </div>
        <% end %>
    </div>
</div>
<div class="vr_3">
    <ul class="hlist hlist-divided mix-hlist_spacious mix-hlist_centered">
        <li>
            <%= link_to "Items", order_path %>
        </li>
        <li>
            <%= link_to "Department", order_path(order: 'department') %>
        </li>
        <li>
            <%= link_to "Meal", order_path(order: 'assembly') %>
        </li>
    </ul>
</div>
<div class="js-orderItem ">
    <% if @order_items_by_concern == nil %>
        <ul class="vlist">
            <% @order.order_items.each do |order_item| %>
                <%= render partial: "shared/action_list_item", locals: { order_item: order_item } %>
            <% end %>
        </ul>
    <% end %>

    <% if @order_items_by_concern != nil %>
        <% @order_items_by_concern.each do |key, order_items| %>
            <div class="orderConcernGroup">
                <% if key == nil && @should_show_non_grouped %>
                    <div class="orderConcernGroup-hd">
                        <h2>Not Grouped</h2>
                    </div>
                <% elsif key != nil %>
                    <div class="orderConcernGroup-hd">
                        <h2><%= key.name%></h2>
                    </div>
                <% end %>

                <ul class="vlist">
                    <% order_items.each do |order_item| %>
                        <%= render partial: "shared/action_list_item", locals: { order_item: order_item } %>
                    <% end %>
                </ul>
            </div>
        <% end %>
    <% end %>
</div>
