<div class="vr_1">
    <ul class="stereo">
        <li>
            <h1 class="hdg hdg_1">Order</h1>
        </li>
        <li>
            <ul class="hlist hlist-divided">
                <li>
                    <%= link_to 'Back', orders_path %>
                </li>
                    <% if @order.status != 'pending' %>
                        <li>
                            <%= link_to 'Duplicate', order_duplicate_path(@order), method: :post %>
                        </li>
                    <% end %>
                <li>
                    <%= link_to 'Edit', edit_order_path(@order) %>
                </li>
                <li>
                    <%= link_to 'Destroy', @order, method: :delete, data: { confirm: 'Are you sure?' } %>
                </li>
            </ul>
        </li>
    </ul>
</div>
<div class="orderMeta">
    <div>
        Shopping Date: <%= @order.order_date %>
    </div>
    <div>
        Status: <%= @order.status %>
    </div>
    <% if @order.location %>
        <div>
            Location: <%= @order.location.name %>
        </div>
    <% end %>
</div>
<ul class="filterBar">
    <li>
        <%= link_to "Item", order_path, class: 'filterBar-link' %>
    </li>
    <li>
        <%= link_to "Department", order_path(order: 'department'), class: 'filterBar-link' %>
    </li>
    <li>
        <%= link_to "Meal", order_path(order: 'assembly'), class: 'filterBar-link' %>
    </li>
</ul>
<div class="js-orderItem ">
    <% if @order_items_by_concern == nil %>
        <ul class="vlist">
            <% @order.order_items.each do |order_item| %>
                <%= render partial: "shared/action_list_item", locals: { order_item: order_item } %>
            <% end %>
        </ul>
    <% end %>

    <% if @order_items_by_concern != nil %>
        <% @order_items_by_concern.each do |key, order_items| %>
            <div class="concernGroup">
                <% if key == nil && @should_show_non_grouped %>
                    <div class="concernGroup-hd">
                        <h2>Not Grouped</h2>
                    </div>
                <% elsif key != nil %>
                    <div class="concernGroup-hd">
                        <h2>
                            <%= key.name%>
                                <%= link_to 'Delete', order_assembly_path(@order.id, key.id), method: :delete, data: { confirm: 'Are you sure?' } %>
                            </span>
                        </h2>
                    </div>
                <% end %>

                <ul class="vlist">
                    <% order_items.each do |order_item| %>
                        <%= render partial: "shared/action_list_item", locals: { order_item: order_item } %>
                    <% end %>
                </ul>
            </div>
        <% end %>
    <% end %>
</div>
