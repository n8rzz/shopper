<%= render partial: "shared/flyoutable_with_form", locals: { flyoutable: @location } %>
<ul class="stereo">
    <li>
        <h1 class="hdg hdg_1">Locations</h1>
    </li>
    <li>
        <a href="#" class="link js-flyout-trigger">New Location</a>
    </li>
</ul>
<ul class="vlist">
    <% @locations.each do |location| %>
        <li class="listItem">
            <div class="listItem-hd">
                <ul class="stereo">
                    <li>
                        <%= link_to location.name, edit_location_path(location), class: "link" %>
                    </li>
                    <li>
                        <%= button_to 'Destroy', location, method: :delete, class: 'btn', data: { confirm: 'Are you sure?' } %>
                    </li>
                </ul>
            </div>
            <div class="listItem-ft">
                <%= location.city_and_state %>
            </div>
        </li>
    <% end %>
</ul>

