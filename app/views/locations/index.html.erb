<!-- TODO: split out to shared partial -->
<div class="flyout mix-flyout_isHidden js-flyout">
    <div class="flyout-bd">
        <%= render 'form', location: @location %>
    </div>
    <div class="flyout-ft">
        <div class="btn btn-toggle js-flyout-trigger">
            <%= image_tag 'arrows_up_double', size: '32x32' %>
        </div>
    </div>
</div>
<ul class="stereo">
    <li>
        <h1 class="hdg hdg_1">Locations</h1>
    </li>
    <li>
        <button class="js-flyout-trigger">New Location</button>
    </li>
</ul>
<ul class="vlist">
    <% @locations.each do |location| %>
        <li class="listItem">
            <div class="listItem-hd">
                <ul class="stereo">
                    <li>
                        <%= link_to location.name, edit_location_path(location) %>
                    </li>
                    <li>
                        <%= button_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %>
                    </li>
                </ul>
            </div>
            <div class="listItem-ft">
                <%= location.city_and_state %>
            </div>
        </li>
    <% end %>
</ul>

