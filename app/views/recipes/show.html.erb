<ul class="stereo">
    <li>
        <h1 class="hdg hdg_1"><%= @recipe.display_name.capitalize %></h1>
    </li>
    <li>
        <ul class="hlist hlist-divided">
            <li>
                <%= link_to 'Back', recipes_path, class: "link" %>
            </li>
            <li>
                <%= link_to 'Edit', edit_recipe_path(@recipe.id), class: "link" %>
            </li>
            <li>
                <%= link_to 'New', new_recipe_path, class: "link" %>
            </li>
        </ul>
    </li>
</ul>

<%= react_component(
    'RecipeContainer',
) %>

<div class="island">
    <div class="island-bd">
        <div class="txt-sansSerif">
            <div class="vr_3">
                <%= @recipe.description %>
            </div>

            <ul class="vlist vlist-short">
                <li>
                    Prep time: <span class="txt-bold"><%= @recipe.prep_time %> minutes</span>
                </li>
                <li>
                    Cook time: <span class="txt-bold"><%= @recipe.cook_time %> minutes</span>
                </li>
                <li>
                    Yield value: <span class="txt-bold"><%= @recipe.yield_value %> <%= @recipe.yield_unit %></span>
                </li>
            </ul>
        </div>
    </div>
</div>

