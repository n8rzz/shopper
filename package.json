{
  "name": "shopper",
  "scripts": {
    "lint": "yarn run eslint -- --ext .jsx app/javascript",
    "test": "jest",
    "test:watch": "jest --watchAll"
  },
  "private": true,
  "dependencies": {
    "@babel/preset-react": "^7.0.0",
    "@rails/actioncable": "^6.0.0",
    "@rails/activestorage": "^6.0.0",
    "@rails/ujs": "^6.0.0",
    "@rails/webpacker": "^4.0.0-rc.7",
    "axios": "^0.19.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "classnames": "^2.2.6",
    "date-fns": "^1.30.1",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.4.0",
    "eventemitter3": "^4.0.0",
    "ignore-loader": "^0.1.2",
    "jest": "^24.9.0",
    "lodash": "^4.17.15",
    "prop-types": "^15.7.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-stickynode": "^2.1.1",
    "react-test-renderer": "^16.9.0",
    "sinon": "^7.4.1",
    "turbolinks": "^5.2.0",
    "webpack-dev-server": "^3.8.0",
    "webpacker-react": "^0.3.2"
  },
  "version": "0.1.0",
  "jest": {
    "roots": [
      "app/javascript"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/app/javascript/packs/setupTests.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/app/javascript/packs/**/*.jsx",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    }
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.15.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.3"
  }
}
